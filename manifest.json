{
  "manifest_version": 3,
  "name": "ProxyFlow",
  "version": "3.0.3",
  "description": "Professional proxy manager with intuitive interface",
  "permissions": ["proxy", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}